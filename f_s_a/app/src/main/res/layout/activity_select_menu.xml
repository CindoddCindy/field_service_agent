<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg_half_primary"
    tools:context=".SelectMenu">

    <include
        android:id="@+id/traveloka_toolbar"
        layout="@layout/_toolbar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="@dimen/margin_extra"
        android:layout_marginRight="@dimen/margin_extra"
        android:layout_marginBottom="@dimen/margin_default"
        android:background="@drawable/bg_info_white"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:paddingBottom="10dp"
            android:gravity="center"
            android:text="Pilih Project"
            android:textSize="18dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_default"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:layout_weight="1"
                    android:layout_margin="5dp"
                    app:cardUseCompatPadding="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/shope_click"
                        android:layout_gravity="center"
                        android:src="@drawable/shopeelogo"
                        android:layout_width="50dp"
                        android:layout_height="50dp">

                    </ImageView>
                </androidx.cardview.widget.CardView>



            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:layout_weight="1"
                    android:layout_margin="5dp"
                    app:cardUseCompatPadding="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView

                        android:layout_gravity="center"
                        android:src="@drawable/ic_photo_black_24dp"
                        android:layout_width="50dp"
                        android:layout_height="50dp">

                    </ImageView>
                </androidx.cardview.widget.CardView>



            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
                <androidx.cardview.widget.CardView
                    android:layout_weight="1"
                    android:layout_margin="5dp"
                    app:cardUseCompatPadding="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_gravity="center"
                        android:src="@drawable/ic_photo_black_24dp"
                        android:layout_width="50dp"
                        android:layout_height="50dp">

                    </ImageView>
                </androidx.cardview.widget.CardView>



            </LinearLayout>

        </LinearLayout>

    </LinearLayout>


</LinearLayout>

